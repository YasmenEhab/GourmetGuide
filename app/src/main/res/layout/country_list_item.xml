<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:andriod="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:padding="16dp">

    <!-- CardView to hold Meal Image and Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <!-- Layout inside CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F7F7F7"
            andriod:id="@+id/linLayout"
            android:padding="16dp">

            <!-- ImageView for displaying the Meal image -->
            <ImageView
                android:id="@+id/meal_image_in_country"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners"
                android:src="@drawable/ic_launcher_background" />

            <!-- TextView for displaying the Meal name -->
            <TextView
                android:id="@+id/tv_meal_name_in_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Name"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:textColor="#1E1E1E"/>



            <!-- Button to view more details about the Meal -->
            <Button
                android:id="@+id/btn_view_details_in_country"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_shape"
                android:text="Show Detail"
                android:layout_gravity="end"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>




